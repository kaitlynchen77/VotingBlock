{% extends "base.njk" %}
{% block title %} Home {% endblock %}
{% block scripts %}
  <script src="javascript/index.js"></script>
{% endblock %}
{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="stylesheets/cover.css"/>
{% endblock %}
{%block body%}
  <body class='d-flex h-100 text-center'>
  {% endblock %}
  {% block navbar %}{% endblock %}
  {%block bodyContent%}
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
      <header class="mb-auto">
        <div>
          <h3 class="float-md-start mb-0 company-name">VotingBlock</h3>
          <nav class="nav nav-masthead justify-content-center float-md-end">
            <a class="nav-link fw-bold py-1 px-0 active" aria-current="page" href="#">Home</a>
            <a class="nav-link fw-bold py-1 px-0" href="#">About</a>
          </nav>
        </div>
      </header>

      <main class="px-3">
        <h1>Welcome.</h1>
        <p class="lead">Log into your Metamask account to enter your transparent, blockchain-backed voting experience.</p>
        <p class="lead">
          <a href="#" class="btn btn-lg btn-light fw-bold border-white bg-white" type="button" onclick="connect();">Get Started</a>
        </p>
      </main>

      <div class='mt-auto'></div>
    </div>
    {%endblock%}